<
  
  <main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron " style="background-image: url(<%= 'https://images.unsplash.com/photo-1546148217-293f105f5e6a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60' %>);">
    <div class="container">
      <h1 class="display-3">Fête au village</h1>
      <% if town_hall_signed_in? %>
        <p><%= button_to "Créer un évènement", new_event_path, class:"btn btn-success", :method => :get %></p>
      <% end %>
    </div>
  </div>

  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Voici les évènements disponibles :</h1>
    <p class="lead">Choisi ton Event</p>
  </div>

  <div class="container">
    <div class="row">
      <!-- Card -->
      <% @events.each_with_index do |event, i| %>
        <%= render 'shared/card_event', event: event %> 
      <% end %>
      <!-- Card -->
    </div>
  </div>
  





