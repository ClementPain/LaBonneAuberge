
<div class="row mb-3">
    <div class="col-md-4">
        <div class="view overlay">
            <% if offer.offer_picture.attached? %>
                <%= image_tag offer.offer_picture, size: "350x350", alt: "Card image cap" %>
            <% end %>
        </div>
    </div>

    <div class="col-md-8">
        <div class="row">
            <%= link_to offer_path(id: offer.id), class:"link_to" do %>
                <h4 class="card-title font-weight-bold mb-2" style="text-transform: uppercase;"><%= offer.title %></h4>
            <% end %>
        </div>
        <div class="row text-align-right">
            <p style="text-decoration: underline;" class="mb-2"><%= offer.category.title if offer.category %></p>
        </div>
        <div class="row">
            <%= h truncate(offer.description, :length => 1200) { link_to 'Voir plus', offer_path(offer.id), class:"link_to" } %>
        </div>
    </div>
</div> 