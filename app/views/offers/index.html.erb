  </div>
</div>

<div class="container-fluid h-100">
  <div class="row h-100">
    <!-- Sidebar -->
    <div class="col-sm-3 h-100 p-4" style="background-color:#111B1C">
      <%= render 'sidebar_offers' %>
    </div>

    
    <div class="col menu-offers px-5">
      <% if @offers.present? %>
        <!-- Card -->
        <% @offers.each_with_index do |offer, i| %>
            <%= render 'card_offer', offer: offer %> 
        <% end %>
        <!-- Card end -->
      <% else %>
        <p>Aucun projet ne contient le terme <%= params[:search] %>.</p>
      <% end %>
    </div>
  </div>
</div>






