

<%= form_for(resource, as: resource_name, url: user_session_path, html: { class: "form-signin mt-3" }) do |f| %>
    <%= devise_error_messages! %>

<div class=center-form>
<h2 class="mb-5 font-weight-bold text-center">Accédez à votre espace et échanger avec la communauté</h2>

    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="d-none d-md-flex col-md-4 col-lg-6 bg-signin"></div>
                <div class="col-md-8 col-lg-6">
                    <div class="login d-flex align-items-center py-5">
                        <div class="container">
                            <div class="row">
                                 <div class="col-md-9 col-lg-8 mx-auto">
                                    <h3 class="login-heading mb-4">Connectez-vous</h3>
                                    <form>
                                        <div class="form-label-group">
                                            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control"  %>
                                            <%= f.label :"Adresse email" %>
                                        </div>

                                        <div class="form-label-group">
                                            <%= f.password_field :password, autofocus: true, autocomplete: "password", placeholder:"Mot de passe", class:"form-control"  %>
                                            <%= f.label "Mot de passe" %>
                                        </div>

                                        <div class="custom-control custom-checkbox mb-3">
                                            <%= f.check_box :remember_me %>
                                            <%= f.label "Se rappeler de moi" %>
                                        </div>
                                        
                                        <%= f.submit "Se connecter", class: "btn btn-lg btn-success btn-block btn-login text-uppercase font-weight-bold mb-2"%>
                                        <div class="text-center">
                                            <%= link_to "Mot de passe oublié", new_user_password_path, class:"link_to" %>
                                            <%= link_to "Pas encore inscrit ? Rejoignez-nous", new_user_registration_path, class:"d-block text-center mt-2 small link_to"%>
                                        </div>
                                    </form>
                                </div>
                            </div>
                         </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
 <% end %>
