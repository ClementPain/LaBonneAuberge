<div class="container">
    <div class="row">
          <div class="col-md-6 offset-md-3">  
              <br><br><br>

               <%= form_for @comment, url: event_comment_path(@event), method: :patch do |f| %>
                   <h1>Modifiez votre commentaire : </h1>
                   
                  <div class="form-group">
                      <%= f.label 'Renseignez vos modifications :'%>
                      <%= f.text_area :content, autofocus: true, autocomplete: "title", class: "form-control"%>
                  </div>

                  <div class="actions mt-5">       
                  <%= f.submit("Valider les modifications", class: "btn btn-lg btn-success btn-block") %>
                  </div> 
                  <% end %>
                  <%= button_to "Supprimer", event_comment_path(params[:event_id], params[:id]), data: {confirm: "Voulez-vous supprimer le commentaire ?" }, method: :delete, class:"btn btn-danger mr-4" %>
          
          </div>
    </div>
</div>
