<div class="container">
    <div class="container-fluid mt-5">
        <div class="row">
      <div class="col-md-6 offset-md-3">  

                <h1>Créez un commentaire pour cet évenement: </h1>
                <p>Remplissez le formulaire</p>
                <br/>

                <%= form_for @comment, url: event_comments_path(@event) do |f| %>
                
                <div class="form-group">
                    <%= f.label 'Renseignez votre commentaire : ' %>
                    <%= f.text_area :content %>
                </div>
                
                
                <%= f.submit("Publier le commentaire", :class =>"btn btn-success") %>

                <% end %>
            </div>
        </div>
    </div>
</div>