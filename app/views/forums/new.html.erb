
  <!-- Message d'erreur en cas de problème-->
  <% if @forum.errors.any? %>
    <div class="alert alert-danger">
      <p>Nous n'avons pas réussi à créer le forum pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
          <% @forum.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

  
  <!-- Formulaire création évènement -->
  <div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">  
            <br><br><br>
            
            <%= form_for @forum, url: village_forums_path(@village) do |f| %>
            <h1>Création d'un forum</h1>
            
            <div class="form-group">
                <%= f.label :title, 'Renseigne un nom : ' %>
                <%= f.text_field :title, autofocus: true, autocomplete: "titre", class: "form-control" %>
            </div>

            <div class="actions mt-5">
                <%= f.submit "Créer un forum", class: "btn btn-lg btn-success btn-block" %>
            </div>
            <% end %>
        </div>
    </div>
</div>

