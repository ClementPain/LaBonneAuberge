<div class="container-fluid mt-5">
    <div class="container emp-profile">
        <div class="row">
            <div class="col-md-4">
                <div class="row profile-img">
                    <% if @villager.villager_picture.attached? %>
                        <%= image_tag(@villager.villager_picture, size: "200x200")%>
                    <% end %> 
                </div>
                <div class="row">
                    <div class="profile-messagerie">
                        <p class="mt-3">MESSAGERIE</p>

                        <%= link_to "Accéder à ma messagerie", conversations_path %>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head" style="height:60px">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Evenements</a>
                        </li>
                    </ul>
                </div>
            
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Prénom</label>
                            </div>
                            <div class="col-md-6">
                                <p><%= @villager.first_name %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Nom</label>
                            </div>
                            <div class="col-md-6">
                                <p><%= @villager.last_name %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p><%= @villager.user.email %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Date de naissance</label>
                            </div>
                            <div class="col-md-6">
                                <p><%= @villager.date_of_birth.strftime('%D') if @villager.date_of_birth %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Description</label>
                            </div>
                            <div class="col-md-6">
                                <p><%= @villager.description %></p>
                            </div>
                        </div>

                        <div class="row">                                    
                            <div class="col-md-6">
                                <label>Evenements auquels j'ai participé</label>
                            </div>
                            <div class="col-md-6">
                                <p><%= @villager.user.events.count %></p>
                            </div>
                        </div>

                        <!-- Village -->
                        <div class="row">
                            <div class="col-md-6">
                                <label>Village</label>
                            </div>
                            <div class="col-md-6">
                                <% if @villager.village_id %>
                                    <p><%= Village.find(@villager.village_id).name %></p>
                                <% elsif @validation = ValidationTownHall.find_by(villager: @villager) %>
                                    <p>Validation en attente de <%= @validation.village.name %></p>
                                <% else %>
                                    <%= button_to "Intégrer un village", new_villager_associate_villager_path(@villager), method: :get, class:"btn btn-success" %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Onglet Evenement -->
                <div class="tab-pane fade" id="today" role="tabpanel" aria-labelledby="today-tab">
                    <div class="row overflow-auto ml-2" style="height:500px">
                        <div class="col-sm-12 border">

                            <!-- Evenement du jour -->
                            <div class="row" style="margin-top: 4%; margin-left: 1%">
                                <div class="col-md-2">
                                    <label>Aujourd'hui</label>
                                </div>
                                <div class="col-md-7">
                                    <% @events_today.each do |e| %>
                                        <%= render 'shared/list_events', event: e %>
                                    <% end %>
                                </div>
                            </div>
                        
                            <!-- Evenements à venir -->
                            <div class="row" style="margin-top: 4%; margin-left: 1%">
                                <div class="col-md-2">
                                    <label>A venir</label>
                                </div>
                                <div class="col-md-7">
                                    <% @events_to_come.each do |e| %>
                                        <%= render 'shared/list_events', event: e %>
                                    <% end %>
                                </div>
                            </div>

                            <!-- Evenements passés -->
                            <div class="row" style="margin-top: 4%; margin-left: 1%">
                                <div class="col-md-2">
                                    <label>Passés</label>
                                </div>
                                <div class="col-md-7">
                                    <% @events_passed.each do |e| %>
                                        <%= render 'shared/list_events', event: e %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <%= link_to "Editer ton profil", edit_villager_path(id:params[:id]), class: "btn btn-sm btn-success btn-block btn-login text-uppercase font-weight-bold mb-2"%>
            </div>
        </div>
    </div>
</div>