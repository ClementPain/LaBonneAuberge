    	<div class="col-sm-9">
           <form class="form-horizontal">
                <fieldset>
                    <legend>Editer le profil </legend>

                    <%= form_for @villager do |f| %>
                        
                        <div class="form-group">
                            <%= f.label :first_name, 'Prénom : ' %>
                            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
                        </div>

                        <div class="form-group">
                            <%= f.label :last_name, 'Nom : ' %>
                            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
                        </div>

                        <div class="form-group">
                            <%= f.label :dat_of_birth, 'Date de naissance : ' %>
                            <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth", class: "form-control" %>
                        </div>

                        <div class="form-group ">
                            <%= f.label :description, 'Description : ' %>
                            <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
                        </div>
                        
        
                        <div class="actions mt-5">
                            <%= f.submit "Modifier le profil", class: "btn btn-lg btn-primary btn-block" %>
                        </div>
